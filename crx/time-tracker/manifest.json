{
    "name": "Time Tracker",
    "version": "0.1",
    "description": "Compete against friends to be the most productive.",
    "icons": {
        "128": "assets/news_icon.png"
    },
    "browser_action": {
        "default_title": "Time Tracker",
        "default_icon": "assets/news_action.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/content.js"]
    }],
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage",
        "cookies"
    ],
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'"
}
